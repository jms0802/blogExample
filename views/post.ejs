<article class="post-detail">
  <header class="post-header">
    <h1 class="post-title"><%= data.title %></h1>
    <div class="post-meta">
      <time class="post-date" datetime="<%= data.createAt.toISOString() %>">
        <%= data.createAt.toLocaleDateString('ko-KR', { year: 'numeric', month: 'long', day: 'numeric' }) %>
      </time>
    </div>
  </header>
  
  <div class="post-content markdown-body">
    <%- content %>
  </div>
  
  <footer class="post-footer">
    <a href="/" class="btn btn-outline">← 홈으로 돌아가기</a>
  </footer>
</article>