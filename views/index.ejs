<!-- 메인 컨텐츠만 표시 (대제목 없음) -->
<section class="recent-posts">
  <div class="hero-image-container">
    <img src="/img/top-hero.jpg" alt="Hero Image" class="hero-image">
  </div>
  <div class="section-header">
    <h2 class="section-title">최근 게시물</h2>
  </div>
  <div class="posts-grid">
    <% data.slice(0, 3).forEach(post=> { %>
      <a href="/post/<%= post.id %>" class="post-card">
        <div class="post-card-left">
          <div class="post-date-large">
            <%= post.createAt.toLocaleDateString('ko-KR', { year: 'numeric' , month: 'long' , day: 'numeric' }) %>
          </div>
        </div>
        <div class="post-card-right">
          <h3 class="post-title">
            <%= post.title %>
          </h3>
          <div class="post-tags">
            <% let tags=[]; if (typeof post.tags==="string" && post.tags.trim().length> 0) {
              try {
              tags = JSON.parse(post.tags);
              } catch(e) {
              tags = post.tags.split(',').map(tag => tag.trim());
              }
              }
              %>
              <% if (tags.length) { %>
                <% tags.forEach(tag=> { %>
                  <span class="post-tag">
                    <%= tag %>
                  </span>
                  <% }) %>
                    <% } else { %>
                      <span class="post-tag">FEATURE</span>
                      <% } %>
          </div>
        </div>
      </a>
      <% }) %>
  </div>
  <% if (data.length> 0) { %>
    <div class="section-footer">
      <a href="/blog" class="btn btn-outline">모든 게시물 보기</a>
    </div>
    <% } %>
</section>